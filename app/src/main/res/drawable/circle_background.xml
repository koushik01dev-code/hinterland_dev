<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Border around the circle -->
    <stroke
        android:width="2dp"
        android:color="#CCCCCC" />

    <!-- Background color -->
    <solid android:color="#FFFFFF" />

    <!-- Padding inside -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />

</shape>