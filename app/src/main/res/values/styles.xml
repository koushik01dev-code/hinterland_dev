<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="normalFontStyle">
        <item name="android:textColor">@color/md_theme_onBackground</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="mediumFontStyle">
        <item name="android:textColor">@color/md_theme_onBackground</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Toolbar overflow (3-dots) popup theme to adjust vertical position and colors -->
    <style name="ThemeOverlay.Hinterland.ToolbarOverflow" parent="ThemeOverlay.Material3.Light">
        <item name="popupMenuStyle">@style/Widget.Hinterland.PopupMenu</item>
    </style>

    <style name="Widget.Hinterland.PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:dropDownVerticalOffset">12dp</item>
        <item name="android:overlapAnchor">false</item>
        <item name="overlapAnchor">false</item>
    </style>

    <style name="CircularImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>

